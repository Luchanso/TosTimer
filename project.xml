<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="TosTimer" package="com.luschanso.tos.timer.TosTimer" version="1.0.0" company="Loutchasnky Oleg" />
	
	<!-- output -->
	<app main="com.luschanso.tos.timer.Main" file="TosTimer" path="bin" />
	
	<window background="#FFFFFF" fps="60" orientation="portrait" resizable="false" />
	<window width="360" height="640" unless="mobile" />
	<window width="0" height="0" if="mobile"/>
	<window resizable="false" orientation="portrait" vsync="false" antialiasing="0" if="cpp" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<haxelib name="dconsole" />
	
	<assets path="assets/icons" rename="icons" />
	<assets path="assets/fonts" rename="fonts" />
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
</project>